{
  "name": "uruhu-ppm-tool",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @uruhu/frontend dev",
    "dev:frontend": "pnpm --filter @uruhu/frontend dev",
    "dev:backend": "pnpm --filter @uruhu/backend dev",
    "dev:all": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "build": "pnpm --filter @uruhu/frontend build && pnpm --filter @uruhu/backend build",
    "build:frontend": "pnpm --filter @uruhu/frontend build",
    "build:backend": "pnpm --filter @uruhu/backend build",
    "server": "pnpm --filter @uruhu/backend dev",
    "db:generate": "pnpm --filter @uruhu/backend db:generate",
    "db:migrate": "pnpm --filter @uruhu/backend db:migrate",
    "db:push": "pnpm --filter @uruhu/backend db:push",
    "db:seed": "pnpm --filter @uruhu/backend db:seed",
    "db:studio": "pnpm --filter @uruhu/backend db:studio",
    "docker:standard": "./docker/scripts/start-standard.sh",
    "docker:services": "docker compose -f docker/development/services/docker-compose.services.yml --env-file docker/development/.env.local up -d",
    "docker:stop": "./docker/scripts/start-standard.sh stop",
    "docker:clean": "./docker/scripts/start-standard.sh clean"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "pnpm": {
    "overrides": {
      "vite": "6.3.5"
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
